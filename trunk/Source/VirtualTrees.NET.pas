procedure TBaseVirtualTree.InternalClearSelection;

var
  Node: TVirtualNode;
  Count: Integer;

begin
  Count := FSelection.Count;
  while Count > 0 do
  begin
    Dec(Count);
    Node := FSelection[Count] as TVirtualNode;
    if not (vsPendingRemoval in Node.FStates) then
      Exclude(Node.FStates, vsSelected);
  end;
  ResetRangeAnchor;
  FSelection.Clear;
  DoStateChange([], [tsClearPending]);
end;

