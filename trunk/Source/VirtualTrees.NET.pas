function TBaseVirtualTree.AbsoluteIndex(Node: TVirtualNode): Integer;

begin
  Result := 0;
  while Assigned(Node) and (Node <> FRoot) do
  begin
    if not (vsInitialized in Node.FStates) then
      InitNode(Node);
    if Assigned(Node.FPrevSibling) then
    begin
      // if there's a previous sibling then add its total count to the result
      Node := Node.FPrevSibling;
      Inc(Result, Node.FTotalCount);
    end
    else
    begin
      Node := Node.Parent;
      if Node <> FRoot then
        Inc(Result);
    end;
  end;
end;

