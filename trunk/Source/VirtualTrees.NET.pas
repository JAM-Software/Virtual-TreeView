function TBaseVirtualTree.InternalAddToSelection(const NewItems: IList; ForceInsert: Boolean): Boolean;

// Internal version of method AddToSelection which does not trigger OnChange events

var
  I: Integer;
  Constrained,
  SiblingConstrained: Boolean;

begin
  // Remove already selected items, mark all other as being selected.
  if ForceInsert then
  begin
    for I := 0 to NewItems.Count - 1 do
      Include(TVirtualNode(NewItems[I]).FStates, vsSelected);
  end
  else
  begin
    Constrained := toLevelSelectConstraint in FOptions.FSelectionOptions;
    if Constrained and (FLastSelectionLevel = -1) then
      FLastSelectionLevel := GetNodeLevel(NewItems[0] as TVirtualNode);
    SiblingConstrained := toSiblingSelectConstraint in FOptions.FSelectionOptions;
    if SiblingConstrained and (FRangeAnchor = nil) then
      FRangeAnchor := NewItems[0] as TVirtualNode;

    for I := 0 to NewItems.Count - 1 do
      if ([vsSelected, vsDisabled] * TVirtualNode(NewItems[I]).FStates <> []) or
         (Constrained and (FLastSelectionLevel <> GetNodeLevel(NewItems[I] as TVirtualNode))) or
         (SiblingConstrained and (FRangeAnchor.Parent <> TVirtualNode(NewItems[I]).Parent)) then
        Include(TVirtualNode(NewItems[I]).FStates, vsPendingRemoval)
      else
        Include(TVirtualNode(NewItems[I]).FStates, vsSelected);
  end;

  I := PackList(NewItems, NewItems.Count);
  Result := I > 0;
  if Result then
  begin
    // Copy the new items to the selection array. This might add invalid entries. Remove them afterwards.
    FSelection.AddRange(NewItems);
    // Sort the new item list so we can easily traverse it.
    // TODO: Do we need IComparer for Array.Sort and Array.BinarySearch?
    FSelection.Sort;
    I := PackList(FSelection, FSelection.Count);
    if I > -1 then
      FSelection.RemoveRange(I, Max(0, FSelection.Count-I-1));
  end;
end;

