function TBaseVirtualTree.InternalAddToSelection(Node: TVirtualNode; ForceInsert: Boolean): Boolean;

begin
  Assert(Assigned(Node), 'Node must not be nil!');
  FSingletonNodeArray.SetValue(Node, 0);
  Result := InternalAddToSelection(FSingletonNodeArray, ForceInsert);
end;

