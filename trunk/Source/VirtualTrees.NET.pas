procedure FillDragRectangles(DragWidth, DragHeight, DeltaX, DeltaY: Integer; var RClip, RScroll, RSamp1, RSamp2, RDraw1,
  RDraw2: TRect);

// Fills the given rectangles with values which can be used while dragging around an image
// (used in DragMove of the drag manager and DragTo of the header columns).

begin
  // ScrollDC limits
  RClip := TRect.Create(0, 0, DragWidth, DragHeight);
  if DeltaX > 0 then
  begin
    // move to the left
    if DeltaY = 0 then
    begin
      // move only to the left
      // background movement
      RScroll := TRect.Create(0, 0, DragWidth - DeltaX, DragHeight);
      RSamp1 := TRect.Create(0, 0, DeltaX, DragHeight);
      RDraw1 := TRect.Create(DragWidth - DeltaX, 0, DeltaX, DragHeight);
    end
    else
      if DeltaY < 0 then
      begin
        // move to bottom left
        RScroll := TRect.Create(0, -DeltaY, DragWidth - DeltaX, DragHeight);
        RSamp1 := TRect.Create(0, 0, DeltaX, DragHeight);
        RSamp2 := TRect.Create(DeltaX, DragHeight + DeltaY, DragWidth - DeltaX, -DeltaY);
        RDraw1 := TRect.Create(0, 0, DragWidth - DeltaX, -DeltaY);
        RDraw2 := TRect.Create(DragWidth - DeltaX, 0, DeltaX, DragHeight);
      end
      else
      begin
        // move to upper left
        RScroll := TRect.Create(0, 0, DragWidth - DeltaX, DragHeight - DeltaY);
        RSamp1 := TRect.Create(0, 0, DeltaX, DragHeight);
        RSamp2 := TRect.Create(DeltaX, 0, DragWidth - DeltaX, DeltaY);
        RDraw1 := TRect.Create(0, DragHeight - DeltaY, DragWidth - DeltaX, DeltaY);
        RDraw2 := TRect.Create(DragWidth - DeltaX, 0, DeltaX, DragHeight);
      end;
  end
  else
    if DeltaX = 0 then
    begin
      // vertical movement only
      if DeltaY < 0 then
      begin
        // move downwards
        RScroll := TRect.Create(0, -DeltaY, DragWidth, DragHeight);
        RSamp2 := TRect.Create(0, DragHeight + DeltaY, DragWidth, -DeltaY);
        RDraw2 := TRect.Create(0, 0, DragWidth, -DeltaY);
      end
      else
      begin
        // move upwards
        RScroll := TRect.Create(0, 0, DragWidth, DragHeight - DeltaY);
        RSamp2 := TRect.Create(0, 0, DragWidth, DeltaY);
        RDraw2 := TRect.Create(0, DragHeight - DeltaY, DragWidth, DeltaY);
      end;
    end
    else
    begin
      // move to the right
      if DeltaY > 0 then
      begin
        // move up right
        RScroll := TRect.Create(-DeltaX, 0, DragWidth, DragHeight);
        RSamp1 := TRect.Create(0, 0, DragWidth + DeltaX, DeltaY);
        RSamp2 := TRect.Create(DragWidth + DeltaX, 0, -DeltaX, DragHeight);
        RDraw1 := TRect.Create(0, 0, -DeltaX, DragHeight);
        RDraw2 := TRect.Create(-DeltaX, DragHeight - DeltaY, DragWidth + DeltaX, DeltaY);
      end
      else
        if DeltaY = 0 then
        begin
          // to the right only
          RScroll := TRect.Create(-DeltaX, 0, DragWidth, DragHeight);
          RSamp1 := TRect.Create(DragWidth + DeltaX, 0, -DeltaX, DragHeight);
          RDraw1 := TRect.Create(0, 0, -DeltaX, DragHeight);
        end
        else
        begin
          // move down right
          RScroll := TRect.Create(-DeltaX, -DeltaY, DragWidth, DragHeight);
          RSamp1 := TRect.Create(0, DragHeight + DeltaY, DragWidth + DeltaX, -DeltaY);
          RSamp2 := TRect.Create(DragWidth + DeltaX, 0, -DeltaX, DragHeight);
          RDraw1 := TRect.Create(0, 0, -DeltaX, DragHeight);
          RDraw2 := TRect.Create(-DeltaX, 0, DragWidth + DeltaX, -DeltaY);
        end;
    end;
end;

