function TCustomVirtualStringTree.ReadChunk(Stream: TStream; Version: Integer; Node: TVirtualNode; ChunkType,
  ChunkSize: Integer): Boolean;

// read in the caption chunk if there is one

var
  Buffer: TBytes;
  NewText: string;

begin
  case ChunkType of
    CaptionChunk:
      begin
        NewText := '';
        if ChunkSize > 0 then
        begin
          SetLength(Buffer, ChunkSize);
          Stream.Read(Buffer, ChunkSize);
          NewText := Encoding.Unicode.GetString(Buffer, 0, ChunkSize);
        end;
        // Do a new text event regardless of the caption content to allow removing the default string.
        Text[Node, FHeader.MainColumn] := NewText;
        Result := True;
      end;
  else
    Result := inherited ReadChunk(Stream, Version, Node, ChunkType, ChunkSize);
  end;
end;

