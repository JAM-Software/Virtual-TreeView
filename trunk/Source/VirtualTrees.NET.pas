procedure TBaseVirtualTree.InternalRemoveFromSelection(Node: TVirtualNode);

// Special version to mark a node to be no longer in the current selection. PackList must
// be used to remove finally those entries.

var
  Index: Integer;

begin
  if FindNodeInSelection(Node, Index) then
    Node.FStates :=  Node.FStates - [vsSelected] + [vsPendingRemoval];
end;

