procedure TVTColumns.LoadFromStream(const Stream: TStream; Version: Integer);

var
  I,
  Index,
  ItemCount: Integer;

begin
  Clear;
  Stream.ReadBuffer(ItemCount, SizeOf(ItemCount));
  // number of columns
  if ItemCount > 0 then
  begin
    BeginUpdate;
    try
      for I := 0 to ItemCount - 1 do
        Add.LoadFromStream(Stream, Version);
      SetLength(FPositionToIndex, ItemCount);
      // TODO: Stream.ReadBuffer should be called directly instead of using an intermediate variable.
      for I := 0 to ItemCount - 1 do
      begin
        Stream.ReadBuffer(Index);
        FPositionToIndex[I] := Index;
      end;
      UpdatePositions(True);
    finally
      EndUpdate;
    end;
  end;
end;

