function OrderRect(const R: TRect): TRect;

// Converts the incoming TRect so that left and top are always less than or equal to right and bottom.

var
  Temp: Integer;

begin
  Result := R;
  if R.Left > R.Right then
  begin
    Temp := Result.Left;
    Result.Left := Result.Right;
    Result.Right := Temp;
  end;
  if R.Top > R.Bottom then
  begin
    Temp := Result.Top;
    Result.Top := Result.Bottom;
    Result.Bottom := Temp;
  end;
end;

