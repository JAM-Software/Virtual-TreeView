procedure TBaseVirtualTree.DetermineHiddenChildrenFlagAllNodes;

var
  Run: TVirtualNode;

begin
  Run := GetFirstNoInit;
  while Assigned(Run) do
  begin
    DetermineHiddenChildrenFlag(Run);
    Run := GetNextNoInit(Run);
  end;
end;

