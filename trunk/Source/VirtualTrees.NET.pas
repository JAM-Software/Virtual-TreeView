procedure TBaseVirtualTree.SelectAll(VisibleOnly: Boolean);

// Select all nodes in the tree.
// If VisibleOnly is True then only visible nodes are selected.

var
  Run: TVirtualNode;
  NextFunction: function(Node: TVirtualNode): TVirtualNode of object;

begin
  if toMultiSelect in FOptions.FSelectionOptions then
  begin
    FTempNodeCache.Clear;
    if VisibleOnly then
    begin
      Run := GetFirstVisible;
      NextFunction := GetNextVisible;
    end
    else
    begin
      Run := GetFirst;
      NextFunction := GetNext;
    end;

    while Assigned(Run) do
    begin
      if not(vsSelected in Run.FStates) then
        FTempNodeCache.Add(Run);
      Run := NextFunction(Run);
    end;
    AddToSelection(FTempNodeCache);
    FTempNodeCache.Clear;
    Invalidate;
  end;
end;

