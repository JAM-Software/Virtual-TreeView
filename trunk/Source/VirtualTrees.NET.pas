procedure TVirtualTreeHintWindow.ActivateHint(Rect: TRect; const AHint: string);

var
  DC: HDC;
  StopLastAnimation: Boolean;

begin
  if IsRectEmpty(Rect) then
    // TODO: Check if full qualifications are necessary.
    Forms.Application.CancelHint
  else
  begin
    // There is already an animation. Start a new one but do not continue the old one once we are finished here.
    StopLastAnimation := (tsInAnimation in FHintData.FTree.FStates);
    if StopLastAnimation then
      FHintData.FTree.DoStateChange([], [tsInAnimation]);

    SetWindowPos(Handle, 0, Rect.Left, Rect.Top, Width, Height, SWP_HIDEWINDOW or SWP_NOACTIVATE or SWP_NOZORDER);
    UpdateBoundsRect(Rect);

    if Rect.Top + Height > Forms.Screen.DesktopHeight then
      Rect.Top := Forms.Screen.DesktopHeight - Height;
    if Rect.Top < Forms.Screen.DesktopTop then
      Rect.Top := Forms.Screen.DesktopTop;
    if Rect.Left + Width > Forms.Screen.DesktopWidth then
      Rect.Left := Forms.Screen.DesktopWidth - Width;
    if Rect.Left < Forms.Screen.DesktopLeft then
      Rect.Left := Forms.Screen.DesktopLeft;

    // Adjust sizes of bitmaps.
    FDrawBuffer.Width := Width;
    FDrawBuffer.Height := Height;
    FBackground.Width := Width;
    FBackground.Height := Height;
    FTarget.Width := Width;
    FTarget.Height := Height;

    FHintData.FTree.Update;

    // Capture screen.
    DC := GetDC(0);
    try
      with Rect do
        BitBlt(FBackground.Canvas.Handle, 0, 0, Width, Height, DC, Left, Top, SRCCOPY);
    finally
      ReleaseDC(0, DC);
    end;

    SetWindowPos(Handle, HWND_TOPMOST, Rect.Left, Rect.Top, Width, Height, SWP_SHOWWINDOW or SWP_NOACTIVATE);
    with FHintData.FTree do
      case DoGetAnimationType of
        hatNone:
          InvalidateRect(Self.Handle, nil, False);
        hatFade:
          begin
            // Make sure the window is not drawn unanimated.
            ValidateRect(Self.Handle, nil);
            // Empirically determined animation duration shows that fading needs about twice as much time as
            // sliding to show a comparable visual effect.
            Animate(FadeAnimationStepCount, 2 * FAnimationDuration, AnimationCallback, nil);
          end;
        hatSlide:
          begin
            // Make sure the window is not drawn unanimated.
            ValidateRect(Self.Handle, nil);
            Animate(Self.Height, FAnimationDuration, AnimationCallback, nil);
          end;
      end;
    if not HintWindowDestroyed and StopLastAnimation and Assigned(FHintData.FTree) then
      FHintData.FTree.DoStateChange([tsCancelHintAnimation], []);
  end;
end;

//----------------------------------------------------------------------------------------------------------------------

function TVirtualTreeHintWindow.CalcHintRect(MaxWidth: Integer; const AHint: string; AData: TObject): TRect;

var
  TM: TTextMetric;
  R: TRect;

begin
  if AData = nil then
    // Defensive approach, it *can* happen that AData is nil. Maybe when several user defined hint classes are used.
    Result := TRect.Empty
  else
  begin
    // The hint window does not need any bidi mode setting but the caller of this method (TApplication.ActivateHint)
    // does some unneccessary actions if the hint window is not left-to-right.
    // The text alignment is based on the bidi mode passed in the hint data, hence we can
    // simply set the window's mode to left-to-right (it might have been modified by the caller, if the
    // tree window is right-to-left aligned).
    BidiMode := bdLeftToRight;

    FHintData := AData as TVTHintData;

    with FHintData do
    begin
      // The draw tree gets its hint size by the application (but only if not a header hint is about to show).
      // This size has already been determined in CMHintShow.
      if (FTree is TCustomVirtualDrawTree) and Assigned(FNode) then
        Result := FHintRect
      else
      begin
        if FColumn <= NoColumn then
        begin
          FBidiMode := FTree.BidiMode;
          FAlignment := FTree.Alignment;
        end
        else
        begin
          FBidiMode := FTree.Header.Columns[FColumn].BidiMode;
          FAlignment := FTree.Header.Columns[FColumn].Alignment;
        end;

        if BidiMode <> bdLeftToRight then
          ChangeBidiModeAlignment(FAlignment);

        if (FNode = nil) or (FTree.FHintMode <> hmToolTip) then
        begin
          Canvas.Font := Forms.Screen.HintFont
        end
        else
        begin
          Canvas.Font := FTree.Font;
          if FTree is TCustomVirtualStringTree then
            with TCustomVirtualStringTree(FTree) do
              DoPaintText(FNode, Self.Canvas, FColumn, ttNormal);
        end;

        GetTextMetrics(Canvas.Handle, TM);
        FTextHeight := TM.tmHeight;
        FLineBreakStyle := hlbDefault;

        if Length(FDefaultHint) > 0 then
          Caption := FDefaultHint
        else
          if FTree.HintMode = hmToolTip then
            Caption := FTree.DoGetNodeToolTip(FNode, FColumn, FLineBreakStyle)
          else
            Caption := FTree.DoGetNodeHint(FNode, FColumn, FLineBreakStyle);

        if Length(Caption) = 0 then
          Result := TRect.Empty
        else
        begin
          if Assigned(FNode) and (FTree.FHintMode = hmToolTip) then
          begin
            // Determine actual line break style depending on what was returned by the methods and what's in the node.
            if FLineBreakStyle = hlbDefault then
              if vsMultiline in FNode.FStates then
                FLineBreakStyle := hlbForceMultiLine
              else
                FLineBreakStyle := hlbForceSingleLine;

            // Hint for a node.
            if FLineBreakStyle = hlbForceMultiLine then
            begin
              // Multiline tooltips use the columns width but extend the bottom border to fit the whole caption.
              with FTree.GetDisplayRect(FNode, FColumn, True, False) do
                Result := TRect.Create(Left, Top, Right, Bottom);

              // DT_CALCRECT sometimes also modifies the right border. But we are only interested in the bottom border.
              R := Result;
              DrawTextW(Canvas.Handle, Caption, Length(Caption), R, DT_CALCRECT or DT_WORDBREAK);
              Result.Bottom := R.Bottom;

              Inc(Result.Right);

              // If the node height is already large enough to cover the entire text, then we don't need the hint, though.
              // However if the text is partially scrolled out of the client area then a hint is useful as well.
              if ((FNode.FNodeHeight + 2) >= (Result.Bottom - Result.Top)) and not
                ((Result.Left < 0) or (Result.Right > FTree.ClientWidth) or
                 (Result.Top < 0) or (Result.Bottom > FTree.ClientHeight)) then
              begin
                Result := TRect.Empty;
                Exit;
              end;
            end
            else
            begin
              with FTree.GetDisplayRect(FNode, FColumn, True, True) do
                Result := TRect.Create(Left, Top, Right, Bottom);
              if toShowHorzGridLines in FTree.TreeOptions.PaintOptions then
                Dec(Result.Bottom);
            end;

            // Include a one pixel border.
            InflateRect(Result, 1, 1);

            // Make the coordinates relative. They will again be offset by the caller code.
            Result := Result.GetOffset(-Result.Left - 1, -Result.Top - 1);
          end
          else
          begin
            // Hint for a header or non-tooltip hint.

            // Start with the base size of the hint in client coordinates.
            Result := TRect.Create(0, 0, MaxWidth, FTextHeight);
            // Calculate the true size of the text TRect.
            DrawTextW(Canvas.Handle, Caption, Length(Caption), Result, DT_CALCRECT);
            // The height of the text plus 2 pixels vertical margin plus the border determine the hint window height.
            Inc(Result.Bottom, 6);
            // The text is centered horizontally with usual text margin for left and right borders (plus border).
            Inc(Result.Right, 2 * FTree.FTextMargin + 2);
          end;
        end;
      end;
    end;
  end;
end;

