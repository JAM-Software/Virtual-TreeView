procedure TBaseVirtualTree.SetVisiblePath(Node: TVirtualNode; Value: Boolean);

// If Value is True then all parent nodes of Node are expanded.

begin
  Assert(Assigned(Node) and (Node <> FRoot), 'Invalid parameter.');

  if Value then
  begin
    repeat
      Node := Node.Parent;
      if Node = FRoot then
        Break;
      if not (vsExpanded in Node.FStates) then
        ToggleNode(Node);
    until False;
  end;
end;

