function TBaseVirtualTree.IsFirstVisibleChild(Parent, Node: TVirtualNode): Boolean;

// Helper method to check if Node is the same as the first visible child of Parent.

var
  Run: TVirtualNode;

begin
  // Find first visible child.
  Run := Parent.FirstChild;
  while Assigned(Run) and not (vsVisible in Run.FStates) do
    Run := Run.NextSibling;

  Result := Assigned(Run) and (Run = Node);
end;

