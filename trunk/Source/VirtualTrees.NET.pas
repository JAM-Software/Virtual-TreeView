function TBaseVirtualTree.IsLastVisibleChild(Parent, Node: TVirtualNode): Boolean;

// Helper method to check if Node is the same as the last visible child of Parent.

var
  Run: TVirtualNode;

begin
  // Find last visible child.
  Run := Parent.LastChild;
  while Assigned(Run) and not (vsVisible in Run.FStates) do
    Run := Run.FPrevSibling;

  Result := Assigned(Run) and (Run = Node);
end;

