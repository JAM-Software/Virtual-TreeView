procedure TBaseVirtualTree.TVMGetItemRect(var Message: TMessage);

// Screen reader support function. This method returns a node's display rectangle.

var
  TextOnly: Boolean;
  Node: TVirtualNode;
  R: TRect;

begin
  // The lparam member is used two-way. On enter it contains a pointer to the item (node).
  // On exit it is to be considered as pointer to a rectangle structure.
  Node := GCHandle(IntPtr(Message.LParam)).Target as TVirtualNode;
  Message.Result := Ord(IsVisible[Node]);
  if Message.Result <> 0 then
  begin
    TextOnly := Message.WParam <> 0;
    R := GetDisplayRect(Node, -1, TextOnly);
    Marshal.StructureToPtr(TObject(R), IntPtr(Message.LParam), False);
  end;
end;

