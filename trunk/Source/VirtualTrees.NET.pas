procedure TClipboardFormatList.Sort;

// Sorts all entry for priority (increasing priority value).

  //--------------- local function --------------------------------------------

  // TODO: Use the IComparable interface instead.
  procedure QuickSort(L, R: Integer);

  var
    I, J: Integer;
    P, T: TClipboardFormatListEntry;

  begin
    repeat
      I := L;
      J := R;
      P := FList[(L + R) shr 1] as TClipboardFormatListEntry;
      repeat
        while TClipboardFormatListEntry(FList[I]).FPriority < P.FPriority do
          Inc(I);
        while TClipboardFormatListEntry(Flist[J]).FPriority > P.FPriority do
          Dec(J);
        if I <= J then
        begin
          T := Flist[I] as TClipboardFormatListEntry;
          FList[I] := FList[J];
          FList[J] := T;
          Inc(I);
          Dec(J);
        end;
      until I > J;
      if L < J then
        QuickSort(L, J);
      L := I;
    until I >= R;
  end;

  //--------------- end local function ----------------------------------------

begin
  if FList.Count > 1 then
    QuickSort(0, FList.Count - 1);
end;

