procedure TBaseVirtualTree.RemoveFromSelection(Node: TVirtualNode);

var
  Index: Integer;

begin
  Assert(Assigned(Node), 'Node must not be nil!');
  if vsSelected in Node.FStates then
  begin
    Exclude(Node.FStates, vsSelected);
    if FindNodeInSelection(Node, Index) and (Index < FSelection.Count - 1) then
      FSelection.RemoveAt(Index);
    if FSelection.Count = 0 then
      ResetRangeAnchor;

    Change(Node);
  end;
end;

