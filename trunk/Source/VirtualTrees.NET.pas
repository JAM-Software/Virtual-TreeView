procedure TVTColumns.AdjustPosition(Column: TVTColumn; Position: Integer);

// Reorders the column position array so that the given column gets the given position.

var
  OldPosition: Integer;

begin
  OldPosition := Column.Position;
  if OldPosition <> Position then
  begin
    if OldPosition < Position then
    begin
      // Column will be moved up so move down other entries.
      System.Array.Copy(FPositionToIndex, Position, FPositionToIndex, OldPosition, Position - OldPosition);
    end
    else
    begin
      // Column will be moved down so move up other entries.
      System.Array.Copy(FPositionToIndex, Position, FPositionToIndex, Position + 1, OldPosition - Position);
    end;
    FPositionToIndex[Position] := Column.Index;
  end;
end;

