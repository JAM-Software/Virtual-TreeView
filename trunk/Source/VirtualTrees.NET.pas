function TVTDataObject.SetData([in] var formatetc: TFormatEtc; var medium: TStgMedium; fRelease: BOOL): HResult;

// Allows dynamic adding to the IDataObject during its existance. Most noteably it is used to implement
// IDropSourceHelper and allows to set a special format for optimized moves during a shell transfer.

var
  Index: Integer;
  StgMediumIndex: Integer;

begin
  // See if we already have a format of that type available.
  Index := FindFormatEtc(FormatEtc, FormatEtcArray);
  if Index > - 1 then
  begin
    // Just use the TFormatEct in the Array after releasing the data.
    StgMediumIndex := FindInternalStgMedium(FormatEtcArray[Index].cfFormat);
    if StgMediumIndex > -1 then
    begin
      // TODO: Release the medium.
      //ReleaseStgMedium(InternalStgMediumArray[Index].Medium);
      // TODO: FillChar causes compiler error.
      //FillChar(InternalStgMediumArray[Index].Medium, SizeOf(InternalStgMediumArray[Index].Medium), #0);
    end;
  end
  else
  begin
    // It is a new format so create a new TFormatCollectionItem, copy the
    // FormatEtc parameter into the new object and and put it in the list.
    SetLength(FFormatEtcArray, Length(FormatEtcArray) + 1);
    FormatEtcArray[High(FormatEtcArray)] := FormatEtc;

    // Create a new InternalStgMedium and initialize it and associate it with the format.
    StgMediumIndex := Length(InternalStgMediumArray);
    SetLength(FInternalStgMediumArray, StgMediumIndex + 1);
    InternalStgMediumArray[StgMediumIndex].Format := FormatEtc.cfFormat;
    // TODO: Clear new storage medium slot.
    //LocalStgMedium := @InternalStgMediumArray[High(InternalStgMediumArray)].Medium;
    //FillChar(LocalStgMedium^, SizeOf(LocalStgMedium^), #0);
  end;

  if fRelease then
  begin
    // We are simply being given the data and we take control of it.
    // TODO: Why do we just assign the medium without doing anything with it?
    //LocalStgMedium^ := Medium;
    Result := S_OK
  end
  else
  begin
    // We need to reference count or copy the data and keep our own references to it.
    Result := StgMediumIncRef(Medium, InternalStgMediumArray[StgMediumIndex].Medium, True, Self as IDataObject);

    // Can get a circular reference if the client calls GetData then calls SetData with the same StgMedium.
    // Because the unkForRelease for the IDataObject can be marshalled it is necessary to get IntPtrs that
    // can be correctly compared. See the IDragSourceHelper article by Raymond Chen at MSDN.
    if Assigned(InternalStgMediumArray[StgMediumIndex].Medium.unkForRelease) then
    begin
      if CanonicalIUnknown(Self) =
        CanonicalIUnknown(TObject(InternalStgMediumArray[StgMediumIndex].Medium.unkForRelease)) then
        // TODO: This is supposed to release the interface (implicit ref count decrement.
        InternalStgMediumArray[StgMediumIndex].Medium.unkForRelease := nil; // release the interface
    end;
  end;

  // Tell all registered advice sinks about the data change.
  if Assigned(FAdviseHolder) then
    FAdviseHolder.SendOnDataChange(Self as IDataObject, 0, 0);
end;

