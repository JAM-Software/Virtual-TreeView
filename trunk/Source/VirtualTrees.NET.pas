function TBaseVirtualTree.GetPrevious(Node: TVirtualNode): TVirtualNode;

// Resturns previous node in tree with regard to Node. The result node is initialized if necessary.

begin
  Result := Node;
  if Assigned(Result) then
  begin
    Assert(Result <> FRoot, 'Node must not be the hidden root node.');

    // Is there a previous sibling?
    if Assigned(Node.FPrevSibling) then
    begin
      // Go down and find the last child node.
      Result := GetLast(Node.FPrevSibling);
      if Result = nil then
        Result := Node.FPrevSibling;
    end
    else
      // no previous sibling so the parent of the node is the previous visible node
      if Node.Parent <> FRoot then
        Result := Node.Parent
      else
        Result := nil;

    if Assigned(Result) and not (vsInitialized in Result.FStates) then
      InitNode(Result);
  end;
end;

