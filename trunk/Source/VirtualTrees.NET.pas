procedure TBaseVirtualTree.DetermineHiddenChildrenFlag(Node: TVirtualNode);

// Update the hidden children flag of the given node.

var
  Run: TVirtualNode;

begin
  if Node.ChildCount = 0 then
  begin
    if vsHasChildren in Node.FStates then
      Exclude(Node.FStates, vsAllChildrenHidden)
    else
      Include(Node.FStates, vsAllChildrenHidden);
  end
  else
  begin
    // Iterate through all siblings and stop when one visible is found.
    Run := Node.FirstChild;
    while Assigned(Run) and not (vsVisible in Run.FStates) do
      Run := Run.NextSibling;
    if Assigned(Run) then
      Exclude(Node.FStates, vsAllChildrenHidden)
    else
      Include(Node.FStates, vsAllChildrenHidden);
  end;
end;

