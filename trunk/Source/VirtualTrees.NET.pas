procedure TBaseVirtualTree.TVMGetNextItem(var Message: TMessage);

// Screen read support function. This method returns a node depending on the requested case.

var
  Node: TVirtualNode;
  Handle: GCHandle;

begin
  // Start with a nil result.
  // Note: The allocated GCHandles are never freed because they are requested from unmanaged code
  //       and we cannot reliably say when they are no longer used by the legacy application.
  //       By allocating weak references at least the garbage collector can continue its work with the
  //       nodes.
  Message.Result := 0;
  Node := GCHandle(IntPtr(Message.LParam)).Target as TVirtualNode;
  case Message.WParam of
    TVGN_CARET:
      begin
        Handle := GCHandle.Alloc(FFocusedNode, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_CHILD:
      if Assigned(Node) then
      begin
        Handle := GCHandle.Alloc(GetFirstChild(Node), GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_DROPHILITE:
      begin
        Handle := GCHandle.Alloc(FDropTargetNode, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_FIRSTVISIBLE:
      begin
        Handle := GCHandle.Alloc(GetFirstVisible, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_LASTVISIBLE:
      begin
        Handle := GCHandle.Alloc(GetLastVisible, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_NEXT:
      if Assigned(Node) then
      begin
        Handle := GCHandle.Alloc(GetNextSibling(Node), GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_NEXTVISIBLE:
      if Assigned(Node) then
      begin
        Handle := GCHandle.Alloc(GetNextVisible(Node), GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_PARENT:
      if Assigned(Node) and Assigned(Node.Parent) then
      begin
        Handle := GCHandle.Alloc(Node.Parent, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_PREVIOUS:
      if Assigned(Node) then
      begin
        Handle := GCHandle.Alloc(GetPreviousSibling(Node), GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_PREVIOUSVISIBLE:
      if Assigned(Node) then
      begin
        Handle := GCHandle.Alloc(GetPreviousVisible(Node), GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
    TVGN_ROOT:
      begin
        Handle := GCHandle.Alloc(GetFirst, GCHandleType.Weak);
        Message.Result := Integer(IntPtr(Handle));
      end;
  end;
end;

