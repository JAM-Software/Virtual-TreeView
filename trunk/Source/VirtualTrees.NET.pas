function TCustomVirtualStringTree.DoGetNodeWidth(Node: TVirtualNode; Column: TColumnIndex; Canvas: TCanvas = nil): Integer;

// Returns the text width of the given node in pixels.
// This width is stored in the node's data member to increase access speed.

(*
var
  Data: PInteger;
*)
begin
  if (Column > NoColumn) and (vsMultiline in Node.FStates) then
    Result := FHeader.Columns[Column].Width
  else
  begin
    if Canvas = nil then
      Canvas := Self.Canvas;

    if (Column = FHeader.MainColumn) and (Node is TVirtualStringNode) then
    begin
      // primary column or no columns
      if TVirtualStringNode(Node).NodeWidth = 0 then
        TVirtualStringNode(Node).NodeWidth := CalculateTextWidth(Canvas, Node, Column, Text[Node, Column]);
      Result := TVirtualStringNode(Node).NodeWidth;
    end
    else
      // any other column
      Result := CalculateTextWidth(Canvas, Node, Column, Text[Node, Column]);
  end;
end;

