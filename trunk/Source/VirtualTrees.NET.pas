  TVirtualNode = class(TObject)
  private
    FTree: TBaseVirtualTree;      // Reference to the owning tree.
    FChildCount: Integer;         // Number of child nodes of this node.
    FIndex: Integer;              // Index of node with regard to its parent.
    FNodeHeight: Integer;         // Height in pixels.
    FStates: TVirtualNodeStates;  // States describing various properties of the node (expanded, initialized etc.).
    FAlign: Integer;              // Line/button alignment.
    FCheckState: TCheckState;     // Indicates the current check state (e.g. checked, pressed etc.).
    FCheckType: TCheckType;       // Indicates which check type shall be used for this node.
    FTotalCount,                  // Sum of this node, all of its child nodes and their child nodes etc.
    FTotalHeight: Integer;        // Height in pixels this node covers on screen including the height of all of its
                                  // children.
    FParent,                      // Reference to the node's parent (for the root this is nil).
    FPrevSibling,                 // Link to the node's previous sibling or nil if it is the first node.
    FNextSibling,                 // Link to the node's next sibling or nil if it is the last node.
    FFirstChild,                  // Link to the node's first child...
    FLastChild: TVirtualNode;     // Link to the node's last child...
    FData: TObject;               // User defined object.
  public
    constructor Create(Tree: TBaseVirtualTree); virtual;

    property CheckType: TCheckType read FCheckType;
    property ChildCount: Integer read FChildCount;
    property Data: TObject read FData write FData;
    property FirstChild: TVirtualNode read FFirstChild write FFirstChild;
    property LastChild: TVirtualNode read FLastChild write FLastChild;
    property NextSibling: TVirtualNode read FNextSibling write FNextSibling;
    property Parent: TVirtualNode read FParent write FParent;
    property PreviousSibling: TVirtualNode read FPrevSibling write FPrevSibling;
    property Index: Integer read FIndex write FIndex;
    property States: TVirtualNodeStates read FStates;
  end;
  TVirtualNodeClass = class of TVirtualNode;

