function TBaseVirtualTree.PackList(List: IList; Count: Integer): Integer;

// Removes all entries from the selection array which are no longer in use.
// The returned value is the number of remaining entries in the array, so the caller can reallocate (shorten)
// the selection array if needed or -1 if nothing needs to be changed.

var
  CurrentEnd,
  NextEntry: Integer;

begin
  Result := -1;
  if Count > 0 then
  begin
    CurrentEnd := 0;
    Inc(Result);
    // Prescan and find first empty entry.
    // TODO: Use generics instead of casting once they are available.
    while (Count > 0) and (not (vsPendingRemoval in TVirtualNode(List[CurrentEnd]).FStates)) do
    begin
      Inc(Result);
      Inc(CurrentEnd);
      Dec(Count);
    end;
    // Now process all entries starting from the first invalid entry.
    NextEntry := CurrentEnd;
    while Count > 0 do
    begin
      if vsPendingRemoval in TVirtualNode(List[NextEntry]).FStates then
      begin
        // Skip this entry.
        Inc(NextEntry);
        Dec(Count);
      end
      else
      begin
        // Found a valid entry. Move it down to the current empty slot.
        Inc(Result);
        Dec(Count);
        List[CurrentEnd] := List[NextEntry];
        Inc(CurrentEnd);
        Inc(NextEntry);
      end;
    end;
  end;
end;

